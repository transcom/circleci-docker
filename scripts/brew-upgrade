#!/bin/bash

#
# A script to upgrade all brew formula related to docker files
#

set -exu -o pipefail

brew upgrade \
    awscli \
    chamber \
    circleci \
    go \
    go-bindata \
    nodenv \
    node-build \
    pre-commit \
    shellcheck \
    terraform-docs \
    tfsec \
    tfenv \
    yarn

nodenv install 14.16.1 --skip-existing
nodenv local 14.16.1
tfenv install latest
tfenv use 0.14.9
